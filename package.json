{
    "name": "react-tooling",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "parcel index.html --open --port 3000",
        "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|js|jsx|json|css|md|mdx|html)\"",
        "format": "npm run prettier -- --write",
        "lint": "eslint --ignore-path .gitignore \"**/*.+(js|jsx)\"",
        "lint:css": "stylelint --ignore-path .gitignore --fix \"**/*.css\"",
        "check-format": "npm run prettier -- --list-different",
        "validate": "npm-run-all --parallel lint lint:css check-format",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.5",
        "prettier": "^2.3.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^22.0.0"
    },
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "lint-staged": {
        "**/*.+(js|jsx)": [
            "eslint"
        ],
        "**/*.css": [
            "stylelint"
        ],
        "**/*.+(ts|tsx|js|jsx|json|css|md|mdx|html)": [
            "prettier --write",
            "git add"
        ]
    }
}
